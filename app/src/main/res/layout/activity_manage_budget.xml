<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManageBudget"
    android:background="@drawable/bg_blue_circle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How do you want to manage your budget?"
            android:textColor="@color/white"
            android:textSize="34dp"
            android:textStyle="bold"
            android:gravity="center_horizontal"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="3"
            android:columnCount="1"
            android:layout_marginVertical="40dp"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Needs"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        />
                    <EditText
                        android:id="@+id/needsAmnt"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:hint="₱5000.00"
                        android:background="@android:color/transparent"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_alignParentEnd="true"
                        android:textAlignment="textEnd"
                        />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wants"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        />
                    <EditText
                        android:id="@+id/wantsAmnt"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:hint="₱5000.00"
                        android:background="@android:color/transparent"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_alignParentEnd="true"
                        android:textAlignment="textEnd"
                        />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </GridLayout>
        <Button
            android:id="@+id/finishBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Finish Setup"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="60dp"
            android:background="@android:color/transparent"/>
    </LinearLayout>
</RelativeLayout>