<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Home"
    android:background="@drawable/bg_purple_vert">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Activity Feed"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginTop="60dp"
        android:textSize="40sp"
        android:textStyle="bold"
        android:id="@+id/head"
        android:layout_marginBottom="20dp"
        />
    <ImageView
        android:id="@+id/piggy"
        android:layout_below="@id/head"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/piggybank"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/finishBtn"
        android:layout_width="wrap_content"
        android:paddingHorizontal="50dp"
        android:layout_centerHorizontal="true"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/emerald"
        android:text="Finish Up This Month"
        android:textColor="@color/white"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="30dp"
        android:textSize="20dp"
        android:textStyle="bold" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/addBtn"
        android:layout_width="80dp"
        android:layout_height="84dp"
        android:backgroundTint="@color/emerald"
        android:text="+"
        android:layout_above="@id/finishBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        app:strokeWidth="2dp"
        app:strokeColor="@color/white"
        android:textSize="30dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/piggy"
        android:layout_above="@id/addBtn"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_marginBottom="10dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_card_needs"
                android:padding="16dp"
                >
                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/icon_food"
                    android:layout_marginRight="20dp"/>
                <LinearLayout
                    android:id="@id/head"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_toEndOf="@id/icon"
                    >
                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jollibee"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="24dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="textEnd"
                        android:text="₱250.00"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="20dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_below="@id/head"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_toEndOf="@id/icon"
                    >
                    <TextView
                        android:layout_below="@id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Food - Needs"
                        android:textColor="@color/white"
                        android:textSize="16dp"
                        android:layout_toEndOf="@id/icon"/>

                    <TextView
                        android:layout_below="@id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="textEnd"
                        android:text="February 2, 2026"
                        android:textColor="@color/white"
                        android:textSize="16dp"
                        android:layout_toEndOf="@id/icon"/>
                </LinearLayout>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_marginBottom="10dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_card_wants"
                android:padding="16dp"
                >
                <ImageView
